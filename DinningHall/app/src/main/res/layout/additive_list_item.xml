<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dip"
            android:layout_width="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/create_date"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/org"
                    android:layout_marginRight="3dip"
                    android:text="1995-02-27"/>
            <TextView
                android:textColor="@color/background"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="责任人:"/>

            <TextView
                android:id="@+id/liable_person"
                android:layout_height="wrap_content"
                android:textColor="@color/zise"
                android:layout_width="wrap_content"
                android:layout_marginRight="3dip"
                android:text="大便"/>

            </LinearLayout>

</LinearLayout>



    <LinearLayout android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dip"
        android:layout_width="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/olive"
                android:text="品名:"/>
            <TextView
                android:id="@+id/name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/background"
                android:text="杭州平平有限药店"/>
        </LinearLayout>

    </LinearLayout>
        <LinearLayout android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dip"
            android:layout_width="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/olive"
                    android:text="生产厂家:"/>
                <TextView
                    android:id="@+id/manufacturer"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/background"
                    android:text="杭州平平有限药店"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dip"
            android:layout_width="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/green"
                    android:text="生产日期:"/>

                <TextView
                    android:id="@+id/manufacture_date"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="3dip"
                    android:textColor="@color/background"
                    android:text="1998-09-15"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:text="保质期:"/>

                <TextView
                    android:id="@+id/quality"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/background"
                    android:text="1998-09-16"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dip"
            android:layout_width="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/tomato"
                    android:text="供货单位:"/>
                <TextView
                    android:id="@+id/supplyunit"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/background"
                    android:text="平平公司"/>
            </LinearLayout>

        </LinearLayout>



        <LinearLayout android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dip"
            android:layout_width="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/blue"
                    android:text="采购日期:"/>

                <TextView
                    android:id="@+id/purchase_date"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/background"
                    android:text="1998-09-15"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:textColor="@color/mediumblue"
                    android:layout_width="wrap_content"
                    android:text="采购数量:"/>

                <TextView
                    android:id="@+id/purchasenum"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/background"
                    android:text="1998"/>
            </LinearLayout>

        </LinearLayout>



        <LinearLayout android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dip"
            android:layout_width="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="使用记录:"/>
                <TextView
                    android:id="@+id/userecord"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/background"
                    android:text="先拆开来，然后放点水，接着拿一只碗青岛人工等等口大口"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dip"
            android:layout_width="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/crimson"
                    android:text="销毁记录:"/>
                <TextView
                    android:id="@+id/destruction_record"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/background"
                    android:text="先拆开来，然后放点水，接着拿一只碗青岛人工等等口大口"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/bianji"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginRight="5dp"
                android:background="@mipmap/edit"/>
            <ImageView
                android:id="@+id/shanchu"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:background="@mipmap/delete"/>
        </LinearLayout>

</LinearLayout>
</LinearLayout>