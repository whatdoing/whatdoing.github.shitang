<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_weight="1"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_height="wrap_content"
            android:background="@color/background2"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:padding="10dip"
            android:text="搜索"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:textColor="#333333"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="检查项目" />

                <EditText
                    android:id="@+id/rectification_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:paddingTop="10px" android:paddingBottom="10px"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:gravity="center_vertical|center"
                    android:background="@drawable/edit"

                    android:hint="请填写"
                    android:textColor="#626262"
                    android:textColorHint="#b6b6b6" />

            </LinearLayout>
               <View  android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="#ebebeb"  />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:textColor="#333333"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="60dp"

                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="发现时间" />

                <Button
                    android:id="@+id/first_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:paddingTop="10px" android:paddingBottom="10px"
                    android:layout_weight="1"
                    android:textSize="12dp"

                    android:gravity="center_vertical|center"

                    android:background="@color/touming"
                    android:hint="请选择"

                    android:textColor="#626262"
                    android:textColorHint="#b6b6b6" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="到"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:paddingTop="10px" android:paddingBottom="10px"
                    android:layout_weight="1"
                    android:textSize="12dp"

                    android:gravity="center_vertical|center"

                    android:background="@color/touming"
                    android:hint="请选择"

                    android:textColor="#626262"
                    android:textColorHint="#b6b6b6" />

            </LinearLayout>

            <View  android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="#ebebeb"  />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:textColor="#333333"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="整改意见" />

                <EditText
                    android:id="@+id/rectification_opinions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:paddingTop="10px" android:paddingBottom="10px"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:gravity="center_vertical|center"
                    android:background="@drawable/edit"

                    android:hint="请填写"
                    android:textColor="#626262"
                    android:textColorHint="#b6b6b6" />

            </LinearLayout>

            <View  android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="#ebebeb"  />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:textColor="#333333"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="整改期限" />

                <EditText
                    android:id="@+id/period_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:paddingTop="10px" android:paddingBottom="10px"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:gravity="center_vertical|center"

                    android:background="@drawable/edit"
                    android:hint="请填写"
                    android:textColor="#626262"
                    android:textColorHint="#b6b6b6" />

            </LinearLayout>
   <View  android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="#ebebeb"  />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:textColor="#333333"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="60dp"

                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="复查时间" />

                <Button
                    android:id="@+id/firstime_fucha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:paddingTop="10px" android:paddingBottom="10px"
                    android:layout_weight="1"
                    android:textSize="12dp"

                    android:gravity="center_vertical|center"

                    android:background="@color/touming"
                    android:hint="请选择"

                    android:textColor="#626262"
                    android:textColorHint="#b6b6b6" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="到"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/lastime_fucha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:paddingTop="10px" android:paddingBottom="10px"
                    android:layout_weight="1"
                    android:textSize="12dp"

                    android:gravity="center_vertical|center"

                    android:background="@color/touming"
                    android:hint="请选择"

                    android:textColor="#626262"
                    android:textColorHint="#b6b6b6" />

            </LinearLayout>
            
            <View  android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="#ebebeb"  />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:textColor="#333333"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="复查结果及意见" />

                <EditText
                    android:id="@+id/review_results"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:paddingTop="10px" android:paddingBottom="10px"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:gravity="center_vertical|center"

                    android:background="@drawable/edit"
                    android:hint="请填写"
                    android:textColor="#626262"
                    android:textColorHint="#b6b6b6" />

            </LinearLayout>

            <View  android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="#ebebeb"  />
            

             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:textColor="#333333"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="录入人员" />

                <EditText
                    android:id="@+id/liable_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:paddingTop="10px" android:paddingBottom="10px"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:gravity="center_vertical|center"

                    android:background="@drawable/edit"
                    android:hint="请填写"
                    android:textColor="#626262"
                    android:textColorHint="#b6b6b6" />

            </LinearLayout>
            
           <View  android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="#ebebeb"  />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:textColor="#333333"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="60dp"

                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="登记时间" />

                <Button
                    android:id="@+id/firstime_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:paddingTop="10px" android:paddingBottom="10px"
                    android:layout_weight="1"
                    android:textSize="12dp"

                    android:gravity="center_vertical|center"

                    android:background="@color/touming"
                    android:hint="请选择"

                    android:textColor="#626262"
                    android:textColorHint="#b6b6b6" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="到"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/lastime_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:paddingTop="10px" android:paddingBottom="10px"
                    android:layout_weight="1"
                    android:textSize="12dp"

                    android:gravity="center_vertical|center"

                    android:background="@color/touming"
                    android:hint="请选择"

                    android:textColor="#626262"
                    android:textColorHint="#b6b6b6" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</ScrollView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/searchBack"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textColor="@color/chongzhizi"
        android:background="@color/chongzhiorg"
        android:layout_width="wrap_content"
android:text="重置"
        />
    <Button
        android:id="@+id/searchOk"
        android:layout_height="wrap_content"
        android:background="@color/serchorg"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:text="完成"
        />
</LinearLayout>



</LinearLayout>