<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dip"
                android:layout_width="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/create_date"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/org"
                        android:layout_marginRight="3dip"
                        android:text="1995-02-27"/>
                    <TextView
                        android:id="@+id/id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="TextView" />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dip"
                android:layout_width="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/palevioletred"
                        android:text="单位名称:"/>
                    <TextView
                        android:id="@+id/inspect_company"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/background"
                        android:text="名字你懂的"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dip"
                android:layout_width="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/forestgreen"
                        android:text="记录时间:"/>

                    <TextView
                        android:id="@+id/inspect_date"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/background"
                        android:text="干什么"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/forestgreen"
                        android:text="记录人:"/>

                    <TextView
                        android:id="@+id/inspect_people"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/background"
                        android:text="干什么"/>


                </LinearLayout>



            </LinearLayout>
            <LinearLayout android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dip"
                android:layout_width="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/forestgreen"
                        android:text="自评结果:"/>

                    <TextView
                        android:id="@+id/log_result"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/background"
                        android:text="干什么"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bianji"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginRight="5dp"
                android:background="@mipmap/edit"/>
            <ImageView
                android:id="@+id/shanchu"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:background="@mipmap/delete"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>