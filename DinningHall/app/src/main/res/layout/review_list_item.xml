<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dip"
            android:layout_width="match_parent">

                <TextView
                    android:id="@+id/create_date"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/org"
                    android:layout_marginRight="3dip"
                    android:text="1995-02-27"/>

            <TextView
                android:textColor="@color/background"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                android:text="检查项目:"/>
            <TextView
                android:id="@+id/rectification_content"
                android:layout_height="wrap_content"
                android:textColor="@color/zise"
                android:layout_width="wrap_content"
                android:layout_marginRight="3dip"
                android:text="aaa"/>

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="TextView" />
            
            </LinearLayout>

        <LinearLayout android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dip"
            android:layout_width="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/background"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="整改意见:"/>
                <TextView
                    android:id="@+id/rectification_opinions"
                    android:layout_height="wrap_content"
                    android:textColor="@color/allblue"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="3dip"
                    android:text="NNNNNNNNN"/>
            </LinearLayout>

        </LinearLayout>



 <LinearLayout android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dip"
            android:layout_width="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/background"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="发现时间:"/>
                <TextView
                    android:id="@+id/find_date"
                    android:layout_height="wrap_content"
                    android:textColor="@color/allblue"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="3dip"
                    android:text="1999-01-01"/>
            </LinearLayout>

 </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dip"
        android:layout_width="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/green"
                android:text="整改期限:"/>
            <TextView
                android:id="@+id/period_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/background"
                android:layout_marginRight="3dip"
                android:text="期限"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/mediumblue"
                android:text="复查时间:"/>
            <TextView
                android:id="@+id/review_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/background"
                android:text="2000-11-11"/>
        </LinearLayout>

    </LinearLayout>

        <LinearLayout android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dip"
            android:layout_width="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/red"
                    android:text="复查结果及意见:"/>

                <TextView
                    android:id="@+id/review_results"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/background"
                    android:text="意见"/>
               
            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dip"
            android:layout_width="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/org"
                    android:text="责任人:"/>
                <TextView
                    android:id="@+id/liable_person"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/background"
                    android:text="刘小平"/>
            </LinearLayout>

        </LinearLayout>
        
        <LinearLayout android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dip"
            android:layout_width="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/org"
                    android:text="检查时间:"/>
                <TextView
                    android:id="@+id/liable_date"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/background"
                    android:text="2000-11-11"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="right"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bianji"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginRight="5dp"
            android:background="@mipmap/edit"/>
        <ImageView
            android:id="@+id/shanchu"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:background="@mipmap/delete"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>