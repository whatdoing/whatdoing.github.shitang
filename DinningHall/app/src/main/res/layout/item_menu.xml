<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation = "horizontal" android:gravity="center_vertical"
	android:layout_width="fill_parent" android:layout_height="55dp">

	<ImageView android:id="@+id/menuitem_image" android:paddingLeft="25dp"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:src="@mipmap/add_text"></ImageView>

	<TextView android:id="@+id/menuitem_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#ffffff"
		android:textSize="16dip"
		android:layout_marginLeft="12dp"></TextView>
</LinearLayout>
